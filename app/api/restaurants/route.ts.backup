/**
 * @fileoverview Restaurants API Route
 * Handles CRUD operations for restaurant management
 * 
 * Authentication: Requires valid Supabase session
 */

import { NextRequest, NextResponse } from 'next/server'
import { createClient } from '@/lib/supabase/server'

/**
 * GET /api/restaurants
 * Retrieves all restaurants owned by the authenticated user
 * 
 * @param request - NextJS request object
 * @returns JSON array of restaurants or error
 * 
 * Success Response (200):
 * [
 *   {
 *     id: "uuid",
 *     name: "Restaurant Name",
 *     address: "123 Main St",
 *     phone: "555-1234",
 *     email: "contact@restaurant.com",
 *     owner_id: "user-uuid",
 *     created_at: "2024-01-01T00:00:00Z",
 *     updated_at: "2024-01-01T00:00:00Z"
 *   }
 * ]
 * 
 * Error Responses:
 * - 401: Unauthorized (no valid session)
 * - 400: Database error
 */
export async function GET(request: NextRequest) {
  const supabase = await createClient()

  // Get user ID from token (simplified approach)
  const authHeader = request.headers.get('authorization')
  let userId = null

  if (authHeader && authHeader.startsWith('Bearer ')) {
    try {
      const token = authHeader.substring(7)
      const decoded = JSON.parse(Buffer.from(token, 'base64').toString())
      userId = decoded.userId
    } catch (error) {
      console.error('[API] Invalid token format')
    }
  }

  if (!userId) {
    return NextResponse.json({ error: 'Unauthorized' }, { status: 401 })
  }

  // Set user context for RLS
  await supabase.rpc('set_user_id', { user_id: userId })

  const { data: restaurants, error } = await supabase
    .from('restaurants')
    .select('*')

  if (error) {
    console.error('[API] GET restaurants error:', error)
    return NextResponse.json({ error: error.message }, { status: 400 })
  }

  return NextResponse.json(restaurants)
}

/**
 * POST /api/restaurants
 * Creates a new restaurant for the authenticated user
 * 
 * @param request - NextJS request with JSON body containing:
 *   {
 *     name: string (required),
 *     address?: string,
 *     phone?: string,
 *     email?: string
 *   }
 * 
 * @returns Created restaurant object (201) or error
 * 
 * Success Response (201):
 * {
 *   id: "uuid",
 *   name: "New Restaurant",
 *   address: "123 Main St",
 *   phone: "555-1234",
 *   email: "contact@restaurant.com",
 *   owner_id: "user-uuid",
 *   created_at: "2024-01-01T00:00:00Z",
 *   updated_at: "2024-01-01T00:00:00Z"
 * }
 * 
 * Error Responses:
 * - 401: Unauthorized (no valid session)
 * - 400: Invalid data or database error
 */
export async function POST(request: NextRequest) {
  const supabase = await createClient()

  // Get user ID from token (simplified approach)
  const authHeader = request.headers.get('authorization')
  let userId = null

  if (authHeader && authHeader.startsWith('Bearer ')) {
    try {
      const token = authHeader.substring(7)
      const decoded = JSON.parse(Buffer.from(token, 'base64').toString())
      userId = decoded.userId
    } catch (error) {
      console.error('[API] Invalid token format')
    }
  }

  if (!userId) {
    return NextResponse.json({ error: 'Unauthorized' }, { status: 401 })
  }

  // Set user context for RLS
  await supabase.rpc('set_user_id', { user_id: userId })

  try {
    const body = await request.json()

    const { data, error } = await supabase
      .from('restaurants')
      .insert([{ ...body, owner_id: userId }])
      .select()

    if (error) {
      console.error('[API] POST restaurant error:', error)
      return NextResponse.json({ error: error.message }, { status: 400 })
    }

    return NextResponse.json(data[0], { status: 201 })
  } catch (error) {
    console.error('[API] POST restaurant parse error:', error)
    return NextResponse.json({ error: 'Invalid request body' }, { status: 400 })
  }
}
